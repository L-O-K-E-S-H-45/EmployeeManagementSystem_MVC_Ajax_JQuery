
@{
    ViewData["Title"] = "Index";
    Layout = "~/views/shared/_Layout.cshtml";
}

@* <h1>Index employee </h1> *@

<button class="btn btn-sm btn-primary m-2 " id="btnAddEmployee">Add Employee</button>

<table class="table table-bordered" style="width:100%;">
    <thead>
        <tr class="text-center">
            <th>EmployeeId</th>
            <th>EmployeeName</th>
            <th>Email</th>
            <th>ProfileImage</th>
            <th>Gender</th>
            <th>Department</th>
            <th>Salary</th>
            <th>HireDate</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody class="text-center" id="table_data"></tbody>
</table>


<div class="modal fade modal" id="EmployeeModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="text-info modal-title" id="EmployeeHeading">Add Employee</h1>
                <button class="close text-danger" onclick="HideModalPopUp()" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
            <form method="post">
                <div class="form-group mt-4 " id="empId">
                    <label>EmployeeId</label>
                    <input type="number" class="form-control" id="EmployeeId" disabled="disabled" />
                </div>
                <div class="form-group mt-4 ">
                    <label>EmployeeName</label>
                    <input type="text" placeholder="Enter Name" class="form-control" id="EmployeeName" @* autocomplete="off" *@ />
                </div>
                <div class="form-group mt-4">
                    @* <label>EmployeeAge</label> *@
                    <input type="email" placeholder="Email" class="form-control" id="Email" @* autocomplete="off" *@ />
                </div>
                <div class="form-group mt-4">
                    @* <label>Address</label> *@
                    <input type="text" placeholder="ProfileImage" class="form-control" id="ProfileImage" @* autocomplete="off" *@ />
                </div>
                <div class="form-group mt-4">
                    @* <label>City</label> *@
                    <input type="text" placeholder="Gender" class="form-control" id="Gender" @* autocomplete="off" *@ />
                </div>
                <div class="form-group mt-4">
                    @* <label>Designation</label> *@
                    <input type="text" placeholder="Department" class="form-control" id="Department" @* autocomplete="off" *@ />
                </div>
                <div class="form-group mt-4">
                    @* <label>Salary</label> *@
                    <input type="number" placeholder="Salary" class="form-control" id="Salary" @* autocomplete="off" *@ />
                </div>
                <div class="form-group mt-4">
                    @* <label>Hiredate</label> *@
                    <input type="date" placeholder="HireDate" class="form-control" id="HireDate" @* autocomplete="off" *@ />
                </div>
            </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" onclick="AddEmployee();" id="AddEmployee">Save</button>
                <button class="btn btn-warning" style="display:none" onclick="UpdateEmployee();" id="btnUpdate">Update</button>
                <button class="btn btn-danger btn-default" onclick="HideModalPopUp()" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>















<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/employee_sc.js"></script>